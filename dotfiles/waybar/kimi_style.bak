/* Catppuccin Mocha Palette */
@define-color base #1e1e2e;
@define-color mantle #181825;
@define-color crust #11111b;
@define-color text #cdd6f4;
@define-color subtext0 #a6adc8;
@define-color subtext1 #bac2de;
@define-color surface0 #313244;
@define-color surface1 #45475a;
@define-color surface2 #585b70;
@define-color overlay0 #6c7086;
@define-color overlay1 #7f849c;
@define-color overlay2 #9399b2;
@define-color blue #89b4fa;
@define-color lavender #b4befe;
@define-color sapphire #74c7ec;
@define-color sky #89dceb;
@define-color teal #94e2d5;
@define-color green #a6e3a1;
@define-color yellow #f9e2af;
@define-color peach #fab387;
@define-color maroon #eba0ac;
@define-color red #f38ba8;
@define-color mauve #cba6f7;
@define-color pink #f5c2e7;
@define-color flamingo #f2cdcd;
@define-color rosewater #f5e0dc;

* {
    font-family: "JetBrainsMono Nerd Font", "Font Awesome 6 Free", monospace;
    font-size: 14px;
    font-weight: bold;
    min-height: 0;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
}

/* Invisible bar background */
window#waybar {
    background-color: transparent;
    border-bottom: none;
    color: @text;
}

/* Transparent containers - no backgrounds */
.modules-left,
.modules-center,
.modules-right {
    background-color: transparent;
    border-radius: 0;
    padding: 0;
    margin: 2px 4px;  /* Vertical breathing room from screen edges */
}

/* Individual module pills - these are the only visible elements */
#custom-trayicon,
#workspaces,
#mode,
#idle_inhibitor,
#language,
#pulseaudio,
#backlight,
#network,
#cpu,
#memory,
#temperature,
#battery,
#disk,
#clock,
#custom-power,
#tray {
    background-color: @surface0;
    border-radius: 4px;
    margin: 0 3px;  /* Spacing between floating pills */
    padding: 0 8px;
}


#tray > widget {
    padding: 0 4px;
    margin: 0 2px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: @red;
    border-radius: 4px;
}

/* Custom tray icon (launcher) */
#custom-trayicon {
    color: @blue;
    font-size: 22px;
    padding: 0 10px;
}

#custom-trayicon:hover {
    color: @sapphire;
    background-color: @surface1;
}

/* Workspaces */
#workspaces {
    padding: 0 4px;
}

#workspaces button {
    padding: 0 10px;
    color: @subtext0;
    background-color: transparent;
    border-radius: 6px;
    margin: 4px 2px;
    min-width: 24px;
    transition: all 0.3s ease;
}

#workspaces button:hover {
    background-color: @surface1;
    color: @text;
}

#workspaces button.focused,
#workspaces button.active {
    background-color: @surface1;
    color: @text;
}

/* Workspace specific colors */
#workspaces button:nth-child(1).active,
#workspaces button:nth-child(1).focused {
    background-color: @blue;
    color: @crust;
}

#workspaces button:nth-child(2).active,
#workspaces button:nth-child(2).focused {
    background-color: @green;
    color: @crust;
}

#workspaces button:nth-child(3).active,
#workspaces button:nth-child(3).focused {
    background-color: @red;
    color: @crust;
}

#workspaces button:nth-child(4).active,
#workspaces button:nth-child(4).focused {
    background-color: @yellow;
    color: @crust;
}

#workspaces button:nth-child(5).active,
#workspaces button:nth-child(5).focused {
    background-color: @mauve;
    color: @crust;
}

#workspaces button.urgent {
    background-color: @red;
    color: @crust;
}

/* Sway mode */
#mode {
    color: @peach;
    margin: 4px;
}

/* Idle inhibitor */
#idle_inhibitor {
    color: @yellow;
    padding: 0 12px;
}

#idle_inhibitor.activated {
    color: @green;
}

/* Language */
#language {
    color: @teal;
}

/* Pulseaudio */
#pulseaudio {
    color: @lavender;
}

#pulseaudio.muted {
    color: @overlay0;
}

/* Backlight */
#backlight {
    color: @yellow;
}

/* Network */
#network {
    color: @blue;
}

#network.disconnected {
    color: @overlay0;
}

/* CPU with fixed width */
#cpu {
    color: @sapphire;
    min-width: 50px;
}

#cpu.warning {
    color: @yellow;
}

#cpu.critical {
    color: @red;
}

/* Memory with fixed width */
#memory {
    color: @green;
    min-width: 50px;
}

#memory.warning {
    color: @yellow;
}

#memory.critical {
    color: @red;
}

/* Temperature with fixed width */
#temperature {
    color: @peach;
    min-width: 50px;
}

#temperature.critical {
    color: @red;
    background-color: @maroon;
}

/* Battery */
#battery {
    color: @green;
}

#battery.charging {
    color: @green;
}

#battery.plugged {
    color: @teal;
}

#battery.warning {
    color: @yellow;
}

#battery.critical {
    color: @red;
}

/* Disk with fixed width */
#disk {
    color: @mauve;
    min-width: 50px;
}

#disk.warning {
    color: @yellow;
}

#disk.critical {
    color: @red;
}

/* Clock */
#clock {
    color: @flamingo;
}

/* Custom power button */
#custom-power {
    color: @red;
    padding: 0 10px;
    font-size: 14px;
}

#custom-power:hover {
    background-color: @red;
    color: @crust;
}

/* Tooltip */
tooltip {
    background-color: @mantle;
    border: 2px solid @surface1;
    border-radius: 12px;
    padding: 8px;
}

tooltip label {
    color: @text;
    font-size: 13px;
}
