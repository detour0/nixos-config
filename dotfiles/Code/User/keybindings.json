// Place your key bindings in this file to override the defaults
[
  // Toggle File explorer
  {
    "key": "ctrl+e",
    "command": "workbench.view.explorer",
    "when": "!explorerViewletVisible"
  },
  {
    "key": "ctrl+e",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarVisible"
  },
  // Move Cursor Focus between Editor and Sidebar or Terminal
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "sideBarFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.terminal.focus",
    "when": "sideBarFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  // Scroll through the terminal
  {
    "key": "alt+j",
    "command": "workbench.action.terminal.scrollDown",
    "when": "terminalFocus"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.terminal.scrollUp",
    "when": "terminalFocus"
  },
  // Adjusting Editor size
  {
    "key": "alt+h",
    "command": "workbench.action.increaseViewWidth",
    "when": "editorFocus"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.decreaseViewWidth",
    "when": "editorFocus"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.decreaseViewHeight",
    "when": "editorFocus"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.increaseViewHeight",
    "when": "editorFocus"
  },
  // Navigate List Suggestions
  {
    "key": "j",
    "command": "list.focusDown",
    "when": "listFocus && explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "k",
    "command": "list.focusUp",
    "when": "listFocus && explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "ctrl+j",
    "command": "selectNextSuggestion",
    "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  },
  {
    "key": "ctrl+k",
    "command": "selectPrevSuggestion",
    "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenNavigatePrevious",
    "when": "inQuickOpen"
  },
  // Navigate Bottom Panel
  {
    "key": "ctrl+shift+h",
    "command": "workbench.view.explorer"
  },
  {
    "key": "ctrl+shift+u",
    "command": "workbench.action.problems.focus"
  },
  {
    "key": "ctrl+shift+i",
    "command": "workbench.action.output.toggleOutput"
  },
  {
    "key": "ctrl+shift+o",
    "command": "workbench.debug.action.toggleRepl"
  },
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "ctrl+shift+k",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  // Clear Notifications
  {
    "key": "ctrl+alt+n",
    "command": "notifications.clearAll"
  },
  // Quit Vscode
  {
    "key": "ctrl+escape",
    "command": "workbench.action.quit"
  }
  //////////////////////////////
  ///// Ignoring annoying keybindings
  //////////////////////////////}
]
