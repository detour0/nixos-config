### General Settings
input type:keyboard {
    xkb_layout "us,de"
    xkb_variant "altgr-intl,"
    # The comma in xkb_variant matches 'de' (which usually has no variant)
}
input type:touchpad {
    tap enabled
    natural_scroll enabled
}
### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Your preferred applications
set $term wezterm
set $menu rofi -show drun
set $file-manager dolphin
set $web-browser firefox

# Set XDG_CURRENT_DESKTOP for proper Wayland support
exec --no-startup-id dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

### Autostart

exec autotiling -l 2
exec wl-paste --type text --watch cliphist store &
exec wl-paste --type image --watch cliphist store &
exec nm-applet
exec waybar
exec mako

## Autostart Applications

exec swaymsg "workspace 3; exec wezterm"

### Key bindings
#
# Basics:
#
    # Start a terminal
    bindsym $mod+Return exec $term
